<h1>Forums</h1>


<table>
  <tr>
    <th>Area</th>
    <th>Description</th>
    <% if current_user.admin? %>        
    <th colspan="3", align="center">Administration Actions</th>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @forums.each do |forum| %>
<div class="listing">
  <tr>
    <td><%= link_to forum.title, forum_path(forum) %></td>
    <td><%= forum.description %></td>
    <% if current_user.admin? %>        
    <td><%= link_to 'Show', forum %></td>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Delete', forum, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
</div>
<% end %>
</table>

<br />

<%= link_to 'New forum', new_forum_path %>
