<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

  <%= stylesheet_link_tag 'jquery.mobile-1.0a1', :media => 'screen' %>
    <%= stylesheet_link_tag 'lightbox', :media => 'screen' %>

  <%= javascript_include_tag :defaults %>

  <script src="http://code.jquery.com/mobile/1.0a1/jquery.mobile-1.0a1.js"></script>

  <%= csrf_meta_tag %>

  </head>
  <body>
    <div data-role="page" id="page" >
		<div class="container">
		    <div data-role="header" id="header>
				<%= render 'layouts/header' %>
			</div>
			
			<div data-role="content" id="content" data-theme="c">
				<section class="round">
					<% flash.each do |key, value| %>
					<%= content_tag(:div, value, :class => "flash #{key}") %>
					<% end %>
					<%= yield %>
				</section>
			</div>
			
			<div data-role="footer" id="footer">
			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>  <!--remove this line to clear screen of debug info -->
			</div>
		</div>
	</div>
	</body>
</html>
